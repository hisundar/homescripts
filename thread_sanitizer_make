rm -rf build
mkdir build
make clean-xfd-hard
cd build
CB_MULTI_GO=0 CC=clang CXX=clang++ CMAKE_ARGS=-DCOUCHBASE_KV_COMMIT_VALIDATION=1 ENABLE_THREADSANITIZER=1 cmake -G "Unix Makefiles" -D PRODUCT_VERSION= -D BUILD_ENTERPRISE= -DCOUCHBASE_KV_COMMIT_VALIDATION=1 -DCB_THREADSANITIZER=ON ..
make all install

